---
title: Vaisala | Add Station
---

<div class="form-div">
    <form id="stationForm" onsubmit="submitStationForm();return false;" autocapitalize="none" autocomplete="on">
        <fieldset class="form-fieldset" id="stationFieldset">
            <legend>Add Station</legend>
            <div class="form-row">
                <label class="hint-text" for="name">Name</label>
                <input tabindex="1" class="form-field" type="text" id="name" name="name" required autofocus/>
            </div>

            <div class="form-row">
                <label class="hint-text" style="margin-top:10px;" for="location">Location</label>
                <input tabindex="2" class="form-field" type="text" id="location" name="location" required/>
            </div>

            <div class="form-row">
                <input tabindex="3" class="btn form-btn station-btn" type="submit" name="button-submit" id="button-submit" value="Add"/>
            </div>
        </fieldset>
    </form>
</div>

